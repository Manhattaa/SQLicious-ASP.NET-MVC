@model SQLicious_ASP.NET_MVC.Models.DTOs.MenuItemDTO

@{
    ViewData["Title"] = "Edit Menu Item";
}

<h2>Edit Menu Item</h2>

<form asp-action="Edit" asp-route-id="@Model.MenuItemId" method="post">
    <input type="hidden" name="_method" value="PUT" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MenuType" class="control-label"></label>
        <select asp-for="MenuType" class="form-control">
            <option value="0">Frukost</option>
            <option value="1">Brunch</option>
            <option value="2">Lunch</option>
            <option value="3">Middag</option>
            <option value="4">Julbord</option>
        </select>
        <span asp-validation-for="MenuType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

