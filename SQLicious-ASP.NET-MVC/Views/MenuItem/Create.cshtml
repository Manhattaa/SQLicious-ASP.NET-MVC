@using SQLicious_ASP.NET_MVC.Models.DTOs
@model MenuItemCreationDTO 

<form asp-action="Create" asp-controller="MenuItem" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" required />
    </div>
    <div class="form-group">
        <label for="IsAvailable">Is Available</label>
        <input type="checkbox" id="IsAvailable" name="IsAvailable" />
    </div>
    <div class="form-group">
        <label for="MenuType">Menu Type</label>
        <select id="MenuType" name="MenuType" class="form-control">
            <option value="0">Frukost</option>
            <option value="1">Brunch</option>
            <option value="2">Lunch</option>
            <option value="3">Middag</option>
            <option value="4">Julbord</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
