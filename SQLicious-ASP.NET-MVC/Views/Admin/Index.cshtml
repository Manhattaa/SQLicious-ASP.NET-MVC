@{
    ViewData["Title"] = "Index";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img class="img-login-container" src="~/assets/chefs-kiss.jpg" class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

                <!-- Initial Login Form -->
                <form asp-action="Login" asp-controller="Admin" method="get">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="Enter a valid email address" required />
                        <label class="form-label" for="email">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required />
                        <label class="form-label" for="password">Password</label>
                    </div>

                    <!-- Remember me (optional) -->
                    <div class="form-check mb-0">
                        <input class="form-check-input me-2" type="checkbox" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>

                    <!-- Submit button -->
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                </form>

                <!-- Two-Factor Authentication Form (conditionally shown) -->
                @if (TempData["Show2FAForm"] != null && (bool)TempData["Show2FAForm"])
                {
                    <form asp-action="Verify2FA" asp-controller="Admin" method="post">
                        <h3>Two-Factor Authentication</h3>
                        <div class="form-outline mb-3">
                            <input type="text" id="twoFactorCode" name="twoFactorCode" class="form-control form-control-lg" placeholder="Enter your 2FA code" required />
                            <label class="form-label" for="twoFactorCode">2FA Code</label>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg">Verify 2FA</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</section>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
