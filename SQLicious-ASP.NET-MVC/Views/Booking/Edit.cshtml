@model SQLicious_ASP.NET_MVC.Models.DTOs.BookingDTO

<h2>Edit Booking</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookingId" />

    <div class="form-group">
        <label asp-for="CustomerId" class="control-label"></label>
        <input asp-for="CustomerId" class="form-control" />
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookedDateTime" class="control-label"></label>
        <input asp-for="BookedDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="BookedDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AmountOfCustomers" class="control-label"></label>
        <input asp-for="AmountOfCustomers" class="form-control" />
        <span asp-validation-for="AmountOfCustomers" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
